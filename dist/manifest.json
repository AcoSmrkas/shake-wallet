{
    "manifest_version": 3,
    "name": "Shake Wallet",
    "description": "Chrome Extension for Handshake",
    "version": "0.1.2",
    "action": {
        "default_icon": "icon-16.png",
        "default_title": "Shake Wallet",
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "js/backgroundPage.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "js/content.js"
            ],
            "run_at": "document_start",
            "all_frames": true
        }
    ],
    "icons": {
        "16": "icon-16.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
    },
    "permissions": [
        "storage",
        "unlimitedStorage",
        "alarms"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "js/shake.js"
            ],
            "matches": [
                "http://*/*",
                "https://*/*"
            ]
        }
    ]
}
